<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingLeft="15dp">

    <ImageView
        android:id="@+id/item_image_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_userdemo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:paddingTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jon Skeet"
            android:textColor="@color/colorUserNameText"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_user_reputation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="933k"
                android:textColor="@color/colorUserNameText"
                android:textSize="@dimen/badge_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_user_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/badge_gold"
                android:drawablePadding="@dimen/badge_drawable_padding"
                android:gravity="center"
                android:text="7671"
                android:layout_marginRight="12dp"
                android:textColor="@color/colorItem_Badge_Text"
                android:textSize="@dimen/item_badge_text_size" />

            <TextView
                android:id="@+id/item_user_silver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/badge_silver"
                android:drawablePadding="@dimen/badge_drawable_padding"
                android:gravity="center"
                android:text="6819"
                android:layout_marginRight="12dp"
                android:textColor="@color/colorItem_Badge_Text"
                android:textSize="@dimen/item_badge_text_size" />

            <TextView
                android:id="@+id/item_user_bronze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/badge_bronze"
                android:drawablePadding="@dimen/badge_drawable_padding"
                android:gravity="center"
                android:text="527"
                android:layout_marginRight="12dp"
                android:textColor="@color/colorItem_Badge_Text"
                android:textSize="@dimen/item_badge_text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>