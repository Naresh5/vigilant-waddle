<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorActivityToolBar"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/user_item_padding_left"
    android:paddingTop="@dimen/user_item_padding_top">

    <ImageView
        android:id="@+id/item_image_user"
        android:layout_width="@dimen/user_item_image_width"
        android:layout_height="@dimen/user_item_image_width"
        android:scaleType="fitXY"
        android:src="@drawable/ic_user_demo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/item_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_item_demo_user"
            android:textColor="@color/colorUserNameText"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_user_reputation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="@string/user_itm_demo_reputation"
                android:textColor="@color/colorUserNameText"
                android:textSize="@dimen/badge_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_user_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_list_margin_right"
                android:drawableLeft="@drawable/badge_gold"
                android:drawablePadding="@dimen/badge_drawable_padding"
                android:gravity="center"
                android:text="@string/user_itm_demo_gold_badge"
                android:textColor="@color/colorItemBadgeText"
                android:textSize="@dimen/item_badge_text_size" />

            <TextView
                android:id="@+id/item_user_silver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_list_margin_right"
                android:drawableLeft="@drawable/badge_silver"
                android:drawablePadding="@dimen/badge_drawable_padding"
                android:gravity="center"
                android:text="@string/user_itm_demo_silver_badge"
                android:textColor="@color/colorItemBadgeText"
                android:textSize="@dimen/item_badge_text_size" />

            <TextView
                android:id="@+id/item_user_bronze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_list_margin_right"
                android:drawableLeft="@drawable/badge_bronze"
                android:drawablePadding="@dimen/badge_drawable_padding"
                android:gravity="center"
                android:text="@string/user_itm_demo_bronze_badge"
                android:textColor="@color/colorItemBadgeText"
                android:textSize="@dimen/item_badge_text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>